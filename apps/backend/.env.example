# Security Settings
# =================
# reCAPTCHA
RECAPTCHA_PUBLIC_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_REQUIRED_SCORE=0.5

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=default

# Honeypot
HONEYPOT_FIELD_NAME=website

# Session & CSRF
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Analytics Configuration
# =======================
ANALYTICS_REQUIRE_CONSENT=True
ANALYTICS_EXCLUDED_PATHS=/admin/,/static/,/media/,/api/
ANALYTICS_EXCLUDE_STAFF=True
ANALYTICS_USE_BATCH=True
ANALYTICS_BATCH_SIZE=50
ANALYTICS_BATCH_TIMEOUT=5
ANALYTICS_SESSION_TIMEOUT=1800
ANALYTICS_ENABLE_GEOLOCATION=False

# External Analytics
ANALYTICS_EXTERNAL_ENABLED=False
GA4_MEASUREMENT_ID=
GA4_API_SECRET=
MIXPANEL_TOKEN=

# GDPR Configuration
# ==================
GDPR_DATA_RETENTION_DEFAULT_DAYS=365
GDPR_ANONYMIZE_ON_DELETE_DEFAULT=True

# Static & Media Files
# =====================
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/mediafiles

# AWS S3 (Optional - for production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=
# USE_S3=False

# Logging
# =======
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# Celery Configuration
# ====================
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=True
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True

# Webhook Configuration
# =====================
WEBHOOK_ENABLED=True
WEBHOOK_SECRET_KEY=your-webhook-secret-key
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=60

# A/B Testing
# ===========
AB_TESTING_ENABLED=True

# Internationalization
# =====================
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_L10N=True
USE_TZ=True

# Docker Configuration
# =====================
WEB_PORT=8000
DB_PORT=5432
REDIS_PORT=6379
