{
  "name": "sitebackend-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Site Backend (Django) and Frontend (Next.js)",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && python manage.py runserver",
    "dev:frontend": "cd apps/frontend && pnpm dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && python manage.py collectstatic --noinput",
    "build:frontend": "cd apps/frontend && pnpm build",
    "install:all": "npm install && cd apps/frontend && pnpm install",
    "migrate": "cd apps/backend && python manage.py migrate",
    "makemigrations": "cd apps/backend && python manage.py makemigrations",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd apps/backend && python manage.py test",
    "test:frontend": "cd apps/frontend && pnpm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd apps/backend && flake8 .",
    "lint:frontend": "cd apps/frontend && pnpm lint",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0",
    "python": ">=3.10.0"
  }
}

